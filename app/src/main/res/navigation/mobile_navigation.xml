<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_calculator">

    <fragment
        android:id="@+id/navigation_community"
        android:name="com.ishnn.labtools.ui.commu.CommuFragment"
        android:label="@string/title_community"
        tools:layout="@layout/fragment_commu">
        <action
            android:id="@+id/action_nav_commu_to_notification"
            app:destination="@id/navigation_notification" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notification"
        android:name="com.ishnn.labtools.ui.commu.notification.NotificationFragment"
        android:label="@string/title_notification"
        tools:layout="@layout/fragment_notification" />

    <fragment
        android:id="@+id/navigation_calculator"
        android:name="com.ishnn.labtools.ui.home.CalculatorFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_calculator">
        <action
            android:id="@+id/action_nav_calculator_to_calcontent"
            app:destination="@id/inner_calculator" />
    </fragment>

    <fragment
        android:id="@+id/inner_calculator"
        android:name="com.ishnn.labtools.ui.home.contentfragment.MainFragment"
        android:label="@string/title_home">
    </fragment>

    <fragment
        android:id="@+id/navigation_stopwatch"
        android:name="com.ishnn.labtools.ui.tools.ToolsFragment"
        android:label="@string/title_tools"
        tools:layout="@layout/fragment_tools_stopwatch" />

<!--    <fragment-->
<!--        android:id="@+id/navigation_notification"-->
<!--        android:name="com.ishnn.labtools.ui.commu.notification.NotificationFragment"-->
<!--        android:label="@string/title_notification"-->
<!--        tools:layout="@layout/fragment_tools_stopwatch" />-->

    <fragment
        android:id="@+id/navigation_memo"
        android:name="com.ishnn.labtools.ui.memo.MemoFragment"
        android:label="@string/title_memo"
        tools:layout="@layout/fragment_commu">
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.ishnn.labtools.ui.home.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>