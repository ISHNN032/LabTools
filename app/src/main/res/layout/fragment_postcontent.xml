<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/post_content_layout_scroll"
    android:scrollbars="vertical"
    tools:context=".ui.community.post.PostContentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/large_margin">

        <TextView
            android:id="@+id/post_content_tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:text="@string/notice"
            android:textColor="@color/red_A700"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/post_content_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="@dimen/large_margin"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="제목"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/post_content_tv_notice"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/post_content_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/mid_margin"
            android:layout_marginLeft="@dimen/large_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginRight="@dimen/large_margin"
            android:gravity="center_vertical"
            android:text="@string/default_nickname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_content_tv_title" />

        <TextView
            android:id="@+id/post_content_tv_time"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="@dimen/large_margin"
            android:gravity="center_vertical"
            android:text="@string/default_time"
            app:layout_constraintStart_toEndOf="@+id/post_content_tv_nickname"
            app:layout_constraintTop_toTopOf="@+id/post_content_tv_nickname" />

        <ImageButton
            android:id="@+id/post_content_btn_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="center"
            android:src="@drawable/ic_post_menu"
            android:background="@color/transparent"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/post_content_tv_nickname"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/post_content_line_title"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:layout_marginVertical="@dimen/large_margin"
            android:background="@color/colorGray"
            app:layout_constraintBottom_toTopOf="@+id/post_content_layout_content"
            app:layout_constraintTop_toBottomOf="@+id/post_content_tv_nickname" />

        <LinearLayout
            android:id="@+id/post_content_layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/large_margin"
            android:orientation="vertical"
            android:padding="@dimen/large_margin"
            app:layout_constraintTop_toBottomOf="@+id/post_content_line_title">

        </LinearLayout>

        <!--    <View-->
        <!--        android:id="@+id/post_content_line_content"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="1dp"-->
        <!--        android:layout_centerInParent="true"-->
        <!--        android:background="@color/colorGray"-->
        <!--        android:layout_marginVertical="@dimen/large_margin"-->
        <!--        app:layout_constraintTop_toBottomOf="@+id/post_content_layout_content"-->
        <!--        app:layout_constraintBottom_toTopOf="@+id/post_content_tv_nickname"-->
        <!--        />-->

        <TextView
            android:id="@+id/post_content_tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginVertical="@dimen/large_margin"
            android:gravity="center_vertical"
            android:text="@string/default_num"
            app:drawableLeftCompat="@drawable/ic_post_comment"
            app:layout_constraintStart_toStartOf="@+id/post_content_layout_content"
            app:layout_constraintTop_toBottomOf="@+id/post_content_layout_content" />

        <View
            android:id="@+id/post_content_line_comment"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:layout_marginVertical="@dimen/large_margin"
            android:background="@color/colorGray"
            app:layout_constraintTop_toBottomOf="@+id/post_content_tv_comment" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/post_content_include_post_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/post_content_line_comment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <include
                layout="@layout/item_post_comment"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/post_content_lv_comment"
            android:layout_marginVertical="@dimen/large_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/post_content_include_post_comment"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>