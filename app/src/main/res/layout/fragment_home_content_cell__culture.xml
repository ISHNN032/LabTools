<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".FunctionFragment.Cell_CultureFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/cell_1st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:background="@color/colorMwAtomBtn"
                android:src="@drawable/s_6_1"/>

            <TextView
                android:id="@+id/cell_1st_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorMwAtomBtn"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/cellculture_fragment_1stbtn_text_kor" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/cell_2nd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:background="@color/colorMwAtomBtn"
                android:src="@drawable/s_6_2"/>

            <TextView
                android:id="@+id/cell_2nd_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorMwAtomBtn"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/cellculture_fragment_2ndbtn_text_kor" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/cell_3rd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:background="@color/colorMwAtomBtn"
                android:src="@drawable/s_6_3"/>

            <TextView
                android:id="@+id/cell_3rd_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorMwAtomBtn"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/cellculture_fragment_3rdbtn_text_kor" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/cell_4th"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:background="@color/colorMwAtomBtn"
                android:src="@drawable/s_6_4"/>

            <TextView
                android:id="@+id/cell_4th_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorMwAtomBtn"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/cellculture_fragment_4thbtn_text_kor" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>