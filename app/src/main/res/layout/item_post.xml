<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="@dimen/mid_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/large_margin">

        <TextView
            android:id="@+id/post_item_tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:text="@string/notice"
            android:visibility="gone"
            android:textColor="@color/red_A700"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/post_item_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="@dimen/large_margin"
            android:text="질문이런제목제목이너무길면..으로표시"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@+id/post_item_tv_notice"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/post_item_tv_time"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="@dimen/large_margin"
            android:gravity="center_vertical"
            android:text="@string/default_time"
            app:layout_constraintTop_toBottomOf="@+id/post_item_tv_title"
            app:layout_constraintStart_toEndOf="@+id/post_item_tv_nickname"/>

        <TextView
            android:id="@+id/post_item_tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            android:text="@string/default_num"
            app:layout_constraintTop_toTopOf="@+id/post_item_tv_favorite"
            app:layout_constraintStart_toEndOf="@+id/post_item_tv_time"
            app:drawableLeftCompat="@drawable/ic_post_comment" />

        <TextView
            android:id="@+id/post_item_tv_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:text="@string/default_num"
            app:layout_constraintTop_toTopOf="@+id/post_item_tv_time"
            app:layout_constraintStart_toEndOf="@+id/post_item_tv_comment"
            app:drawableLeftCompat="@drawable/ic_post_favorite" />

        <TextView
            android:id="@+id/post_item_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/mid_margin"
            android:layout_marginLeft="@dimen/large_margin"
            android:layout_marginRight="@dimen/large_margin"
            android:gravity="center_vertical"
            android:text="@string/default_nickname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_item_tv_title"/>

        <ImageView
            android:id="@+id/post_item_iv_image"
            android:visibility="gone"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/large_margin"
            android:layout_marginEnd="68dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6"
            android:contentDescription="@string/desc_post_item_iv_image" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>