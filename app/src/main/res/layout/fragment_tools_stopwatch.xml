<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tools.StopwatchFragment">

    <com.ishnn.labtools.ui.tools.CircleProgressBar
        android:id="@+id/stopwatch_progressBar"
        android:layout_width="@dimen/progressBar_dimen"
        android:layout_height="@dimen/progressBar_dimen"
        app:progress="0"
        app:max="60"
        app:progressBarThickness="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/stopwatch_log"
        />

    <TextView
        android:id="@+id/stopwatch_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00.00"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="@+id/stopwatch_progressBar"
        app:layout_constraintRight_toRightOf="@+id/stopwatch_progressBar"
        app:layout_constraintLeft_toLeftOf="@+id/stopwatch_progressBar"
        app:layout_constraintBottom_toBottomOf="@+id/stopwatch_progressBar"/>

    <TextView
        android:id="@+id/stopwatch_log"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:text="01\t\t\t\t\t+ 00:00.20\t\t\t\t00:02:15"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/stopwatch_progressBar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/stopwatch_btn_layout"/>

    <LinearLayout
        android:id="@+id/stopwatch_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/stopwatch_log"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageButton
            android:id="@+id/stopwatch_btn_start"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="@dimen/large_margin"
            android:src="@drawable/ic_stopwatch_start"
            android:background="@drawable/circle_gray"
            />

        <ImageButton
            android:id="@+id/stopwatch_btn_stop"
            android:visibility="gone"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="@dimen/large_margin"
            android:src="@drawable/ic_stopwatch_stop"
            android:background="@drawable/circle_gray"
            />
        <ImageButton
            android:id="@+id/stopwatch_btn_resume"
            android:visibility="gone"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="@dimen/large_margin"
            android:src="@drawable/ic_stopwatch_start"
            android:background="@drawable/circle_gray"
            />

        <ImageButton
            android:id="@+id/stopwatch_btn_add"
            android:visibility="gone"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="@dimen/large_margin"
            android:src="@drawable/ic_stopwatch_add"
            android:background="@drawable/circle_gray"
            />
        <ImageButton
            android:id="@+id/stopwatch_btn_pause"
            android:visibility="gone"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="@dimen/large_margin"
            android:src="@drawable/ic_stopwatch_pause"
            android:background="@drawable/circle_gray"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>