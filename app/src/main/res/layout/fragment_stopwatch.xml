<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="48dp"
    tools:context=".ui.stopwatch.StopwatchFragment">

    <com.ishnn.labtools.ui.stopwatch.CircleProgressBar
        android:id="@+id/custom_progressBar"
        android:layout_width="@dimen/progressBar_dimen"
        android:layout_height="@dimen/progressBar_dimen"
        app:progress="35"
        app:progressBarThickness="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/stopwatch_log"
        />

    <TextView
        android:id="@+id/text_stopwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00.00"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="@+id/custom_progressBar"
        app:layout_constraintRight_toRightOf="@+id/custom_progressBar"
        app:layout_constraintLeft_toLeftOf="@+id/custom_progressBar"
        app:layout_constraintBottom_toBottomOf="@+id/custom_progressBar"/>

    <TextView
        android:id="@+id/stopwatch_log"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center_horizontal"
        android:text="01\t\t\t\t\t+ 00:00.20\t\t\t\t00:02:15"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/custom_progressBar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_layout"/>

    <LinearLayout
        android:id="@+id/seekBar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/stopwatch_log"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>