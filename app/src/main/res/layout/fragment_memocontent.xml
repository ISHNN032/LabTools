<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/post_content_layout_scroll"
    android:scrollbars="vertical"
    tools:context=".ui.community.post.PostContentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/large_margin">

        <TextView
            android:id="@+id/memo_content_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="@dimen/large_margin"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="제목"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/memo_content_tv_time"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="@dimen/large_margin"
            android:gravity="center_vertical"
            android:text="@string/default_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/memo_content_tv_title"/>

        <ImageButton
            android:id="@+id/memo_content_btn_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="center"
            android:src="@drawable/ic_post_menu"
            android:background="@color/transparent"
            app:layout_constraintTop_toTopOf="@id/memo_content_tv_time"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/memo_content_line_title"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:layout_marginVertical="@dimen/large_margin"
            android:background="@color/colorGray"
            app:layout_constraintBottom_toTopOf="@+id/memo_content_layout_content"
            app:layout_constraintTop_toBottomOf="@+id/memo_content_tv_time" />

        <LinearLayout
            android:id="@+id/memo_content_layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/large_margin"
            android:orientation="vertical"
            android:padding="@dimen/large_margin"
            app:layout_constraintTop_toBottomOf="@+id/memo_content_line_title">
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>