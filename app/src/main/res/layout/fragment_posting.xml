<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".ui.community.post.PostingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/posting_button_exit"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="@string/x"
            android:textStyle="bold"
            android:background="@color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <Button
            android:id="@+id/posting_button_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_centerInParent="true"
            android:background="@color/colorGray"
            app:layout_constraintTop_toTopOf="@+id/posting_et_title" />
        <EditText
            android:id="@+id/posting_et_title"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="12dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/colorBlack"
            android:hint="제목"
            android:background="@null"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/posting_button_exit"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_centerInParent="true"
            android:background="@color/colorGray"
            app:layout_constraintBottom_toBottomOf="@+id/posting_et_title" />

        <LinearLayout
            android:id="@+id/posting_layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/small_margin"
            app:layout_constraintTop_toBottomOf="@+id/posting_et_title">
            <ImageButton
                android:id="@+id/posting_button_image"
                android:src="@drawable/ic_posting_image"
                android:background="@color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_centerInParent="true"
            android:background="@color/colorGray"
            app:layout_constraintBottom_toBottomOf="@+id/posting_layout_buttons" />

        <LinearLayout
            android:id="@+id/posting_layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/large_margin"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/posting_layout_buttons">
            <EditText
                android:id="@+id/posting_et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:padding="@dimen/large_margin"
                android:textColor="@color/colorBlack"
                android:hint="내용을 입력하세요."
                android:background="@null"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <Button
            android:id="@+id/posting_button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_cancel"
            app:layout_constraintTop_toBottomOf="@+id/posting_layout_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/posting_button_save"/>

        <Button
            android:id="@+id/posting_button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_save"
            app:layout_constraintTop_toBottomOf="@+id/posting_layout_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/posting_button_cancel"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>