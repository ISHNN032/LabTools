<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Toolbar
            android:id="@+id/toolbar"
            style="@style/Theme.AppCompat.DayNight.DarkActionBar"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_scrollFlags="scroll|enterAlways">

            <ImageButton
                android:id="@+id/main_button_menu"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/menu"
                android:background="@color/transparent"
                android:layout_gravity="start"
                android:src="@drawable/ic_toolbar_menu" />

            <TextView
                android:id="@+id/main_text_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추가 컨텐츠 이용을 위해 로그인해주세요."
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorWhite"/>

            <Button
                android:id="@+id/main_button_login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/menu"
                android:background="@color/transparent"
                android:layout_gravity="end"
                android:text="로그인"
                android:textColor="@color/colorWhite"/>
        </Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:background="#ffffff"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <LinearLayout
                android:id="@+id/make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="230dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:background="@color/colorMwAtomBtn"
                    android:src="@drawable/ic_home_content_buffer" />

                <TextView
                    android:id="@+id/main_make_text"
                    android:layout_width="402dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorMwAtomBtn"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dilution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="230dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:background="@color/colorMwAtomBtn"
                    android:src="@drawable/ic_home_content_dilution" />

                <TextView
                    android:id="@+id/main_dilution_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorMwAtomBtn"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mw_cal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="230dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:background="@color/colorMwAtomBtn"
                    android:src="@drawable/ic_home_content_molecular" />

                <TextView
                    android:id="@+id/main_mw_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorMwAtomBtn"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cell_culture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp">

                <ImageView
                    android:layout_width="230dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:background="@color/colorMwAtomBtn"
                    android:src="@drawable/ic_home_content_cell" />

                <TextView
                    android:id="@+id/main_cell_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorMwAtomBtn"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="230dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:background="@color/colorMwAtomBtn"
                    android:src="@drawable/ic_home_content_my" />

                <TextView
                    android:id="@+id/main_buffer_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorMwAtomBtn"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/unit_converter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="230dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:background="@color/colorMwAtomBtn"
                    android:src="@drawable/ic_home_content_unit" />

                <TextView
                    android:id="@+id/main_unit_converter_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorMwAtomBtn"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pcr_fold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="230dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:background="@color/colorMwAtomBtn"
                    android:src="@drawable/ic_home_content_protein" />

                <TextView
                    android:id="@+id/main_pcr_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorMwAtomBtn"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gel_cal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="230dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:background="@color/colorMwAtomBtn"
                    android:src="@drawable/ic_home_content_dna" />

                <TextView
                    android:id="@+id/main_sds_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorMwAtomBtn"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/main_navigationView"
        android:layout_width="304dp"
        android:layout_height="match_parent"
        android:layout_gravity="start|left"
        app:headerLayout="@layout/drawer_header"
        app:itemIconTint="@color/colorCalculatorButtonAction"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>